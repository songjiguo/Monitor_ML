#define XMIT_HEADERS_GATHER_LEN 32 
struct gather_item {
	void *data;
	int len;
};
struct cos_net_xmit_headers {
	/* Length of the header */
	int len, gather_len;
	/* Max IP header len + max TCP header len */
	char headers[80];
	struct gather_item gather_list[XMIT_HEADERS_GATHER_LEN];
}__attribute__((aligned(4096)));

